{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": [
    "./**/*.ts",
    "../types/**/*.ts",
    "../utilities/**/*.ts",
    "../meowkit/**/*.ts",
    "../meowtion/**/*.ts",
    "../meowbrain/**/*.ts",
    "../meowbase/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs",
    "__tests__",
    "../**/__tests__",
    "vitest.config.ts",
    "../**/vitest.config.ts"
  ]
}