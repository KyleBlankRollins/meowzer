---
interface Props {
  title?: string;
}

const { title = "Meowzer Playground" } = Astro.props;
---

<!doctype html>
<html lang="en" class="cds-theme-g10">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Create and customize your own animated cats. Play with personalities, colors, and watch them roam!"
    />
    <!-- Carbon Design System styles -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@carbon/styles@1.95.0/css/styles.min.css"
    />
    <!-- Shoelace light theme -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.20.1/dist/themes/light.css"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --bg-cream: #fffef9;
    --accent-orange: #ff9500;
    --accent-blue: #0a84ff;
  }

  html {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    background: var(--bg-cream);
  }

  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
</style>
