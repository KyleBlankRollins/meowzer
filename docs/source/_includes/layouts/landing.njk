---
layout: layouts/base.njk
---
<mb-landing-template
  data-frontmatter='{{ { title: title, description: description, banner: banner } | dump | safe }}'
>
  {# Sidebar with hierarchical navigation #}
  <mb-sidebar
    slot="sidebar"
    data-navigation='{{ collections.navigation | dump | safe }}'
    data-current-url="{{ page.url }}"
  ></mb-sidebar>
  
  <div slot="content">
    {{ content | safe }}
  </div>
</mb-landing-template>
