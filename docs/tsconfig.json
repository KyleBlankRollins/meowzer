{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2023",
    "useDefineForClassFields": false,
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client"
    ],
    "verbatimModuleSyntax": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "source",
    "scripts"
  ]
}